<title>Listado novedades</title>
<div class="container">
    <h1>Listado de Novedades</h1>
    <h3>Bienvenido {{nombre}}</h3><br>
</div>

<div class="container">
    <table class="table table-hover table-bordered">
        <thead class="thead-dark">
            <tr style="width: 1000px">
                <th style="width: 800px" scope="col">Novedad</th>
                <th style="width: 180px" scope="col">Autor</th>
            </tr>
        </thead>

        <tbody>
            {{#each lista}}
            <tr>
                <td style="width: 800px">{{this.novedad}}</td>
                <td style="width: 180px">{{this.autor}}</td>
            </tr>
            {{/each}}
        </tbody>

    </table>
</div>
<br>
<div class="container">
    <h1>Agregar Novedades</h1><br>
    {{mensaje_error}}
    <form action="/novedades" method="post">

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-default">Novedad</span>
            </div>
            <input type="text" name="novedad" id="novedad" class="form-control" aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-default">
        </div>
        <button type="submit" class="btn btn-success">Agregar</button>
    </form>
    <br>
    <p><a href="/logout" class="btn btn-danger">Salir</a></p>



</div>
